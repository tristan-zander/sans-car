@page
@model SansCar.Pages.Index

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <link href="@Url.Content("~/css/index.css")" rel="stylesheet" type="text/css" />
    <title>Sans Car Home Page</title>
</head>
<body class="container">
<header class="container">
    <ul class="navbar">
        <li class="nav-item">Home</li>
        <li class="nav-item">Add Bot</li>
        <li class="nav-item nav-align-left">Coming soon: Dashboard</li>
    </ul>
</header>
<div class="main-container">
    <div class="container main-info">
        <div class="container image-and-title">
            <img src="images/sanscar.jpg" class="sans-image-container" alt="The original sans car meme."/>
            <h1 class="title">Sans Car</h1>
        </div>
        <p>
